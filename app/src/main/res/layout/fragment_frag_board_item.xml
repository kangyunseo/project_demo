<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_thema"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    ​

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_thema"
        android:orientation="horizontal"
        android:weightSum="11">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImgInPost"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:adjustViewBounds="false"
            android:paddingVertical="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseprofile_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:text="게시글 제목"
                android:textColor="@color/mainTextBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nicknameInPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="작성자"
                android:textColor="@color/secondTextGray"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="6dp"
            android:text="19/12/12"
            android:textColor="@color/thirdTextGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="|"
            android:textColor="@color/thirdTextGray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/postView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="조회 78"
            android:textColor="@color/thirdTextGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="|"
            android:textColor="@color/thirdTextGray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/postLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요 3"
            android:textColor="@color/thirdTextGray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/boardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="게시판 이름"
            android:textColor="@color/thirdTextGray"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/firstBorderSilver"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/contentsImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:srcCompat="@android:color/transparent" />

        <TextView
            android:id="@+id/contentsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainTextBlack"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>