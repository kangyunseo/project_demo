<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/thema_0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/bt_choose3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="centerCrop"
            android:src="@drawable/img_add_photo" />

        <EditText
            android:id="@+id/date_now3"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:hint="now_Date"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/board_title"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:hint="제목"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/board_context"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:hint="내용"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/btn_upload3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/thema_0"
            android:src="@drawable/ic_icon_upload"
            />

        <TextView
            android:id="@+id/exif3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>